{
    "tabWidth": 4,
    "overrides": [
        {
            "files": "*.graphql",
            "parser": "graphql"
        },
        {
            "files": "*.js",
            "options": {
                "singleQuote": true,
                "trailingComma": "es5"
            },
            "parser": "babylon"
        },
        {
            "files": "*.json",
            "parser": "json"
        },
        {
            "files": "*.md",
            "options": {
                "tabWidth": 2
            },
            "parser": "markdown"
        },
        {
            "files": "*.ts*(x)",
            "options": {
                "singleQuote": true,
                "trailingComma": "es5"
            },
            "parser": "typescript"
        }
    ]
}
